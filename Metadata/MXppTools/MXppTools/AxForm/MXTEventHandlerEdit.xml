				<Name>init</Name>
				<Source><![CDATA[
    /// <summary>
    ///
    /// </summary>
    public void init()
    {
        if (element.args().dataset() != tableNum(MXTXppEventHandlerTable))
        {
            throw error(error::missingRecord(tableStr(MXTXppEventHandlerTable)));
        }

        callerEventHandler = element.args().record();

        super();

        if (callerEventHandler.Active)
        {
            warning("@MXT:EventHandlerChanges");
        }

    }

]]></Source>
